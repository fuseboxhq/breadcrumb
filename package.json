    "@radix-ui/react-tooltip": "^1.2.8",
    "@tailwindcss/typography": "^0.5.19",
    "@tanstack/react-query": "^5.62.0",
    "better-sqlite3": "^12.4.1",
    "chokidar": "^5.0.0",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "drizzle-orm": "^0.45.1",
    "express": "^4.21.0",
    "lucide-react": "^0.563.0",
    "motion": "^12.31.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^9.0.1",
