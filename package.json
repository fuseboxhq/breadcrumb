    "@types/express": "^5.0.0",
    "@types/mdast": "^4.0.4",
    "@types/node": "^22.10.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@vercel/node": "^5.5.33",
